{% extends 'base.html.twig' %}

{% block body %}
<link href="{{ asset('css/account.css') }}" rel="stylesheet" />

    <section>

        <div class="block-btn-user-menu">
            <a href="{{ path('new') }}">
            <button  class="btn-create"><span class="mdi mdi-file icon-medium"> </span>Create new page</button>
        </a>
        </div>

        <div class="block">
            <p class="title-form"> <span class="mdi grey mdi-file-document-edit icon-medium"> </span>In progress</p>
            <div class="list-article">
                {% for page in pages %}
                    {% if page.status == 'INPROGRESS' %}
                    <div class="li-page"> 
                        <div class="li-title-page font-medium">{{ page.title | raw }}</div>
                        
                        <div class="li-date-page"> {{ page.date |date("m/d/Y") }}</div>
             
                        <div>
                                <a href="{{ path('status', {'id': page.id, 'status': 'INREVIEW'}) }}">
                                        <button class="btn-list"><span class="mdi orange mdi-file-document-edit icon-medium"> </span>In review</button>
                                    </a>
                            <a href="{{ path('edit', {'id': page.id }) }}">
                                <button class="btn-list"><span class="mdi orange mdi-file-document-edit icon-medium"> </span>EDIT</button>
                            </a>
                            {{page.url}}
                                <a href="{{ path('remove', {'id': page.id }) }}">
                                    <button class="btn-list"><span class="mdi red mdi-delete icon-medium"></span>DELETE</button>
                            </a>
                            
                        </div>
                    </div>
                    {% endif %}
                {% endfor %}
                
            </div>
        </div>
        <div class="block">
            <p class="title-form"><span class="mdi orange mdi-file-document-box-search icon-medium"> </span>In review</p>
            <div class="list-article">
                {% for page in pages %}
                    {% if page.status == 'INREVIEW' and page.validations|length < 3 %}
                        <div class="li-page"> 
                            <div class="li-title-page font-medium">{{ page.title | raw }}</div>
                            <div class="li-date-page"> {{ page.date |date("m/d/Y") }}</div>
                            <div class="li-title-page">{{ page.validations | length }}</div>
                            <div>
                               
                                <a href="{{ path('edit', {'id': page.id }) }}">
                                    <button class="btn-list"><span class="mdi orange mdi-file-document-edit icon-medium"> </span>EDIT</button>
                                </a>
                                    <a href="{{ path('remove', {'id': page.id }) }}">
                                        <button class="btn-list"><span class="mdi red mdi-delete icon-medium"></span>DELETE</button>
                                </a>
                                
                            </div>
                        </div>
                    {% endif %}
                    {% if page.status == 'INREVIEW' and page.validations|length > 2 %}
                        <div class="li-page border-green"> 
                            <div class="li-title-page font-medium">{{ page.title | raw }}</div>
                            <div class="li-date-page"> {{ page.date |date("m/d/Y") }}</div>
                            <div class="li-title-page">{{ page.validations | length }}</div>
                            <div>
                                    <a href="{{ path('status', {'id': page.id, 'status': 'PUBLIC'}) }}">
                                            <button class="btn-list"><span class="mdi green mdi-check-outline icon-medium"> </span>Public</button>
                                        </a>
                                <a href="{{ path('edit', {'id': page.id }) }}">
                                    <button class="btn-list"><span class="mdi orange mdi-file-document-edit icon-medium"> </span>EDIT</button>
                                </a>
                                    <a href="{{ path('remove', {'id': page.id }) }}">
                                        <button class="btn-list"><span class="mdi red mdi-delete icon-medium"></span>DELETE</button>
                                </a>
                                
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="block">
            <p class="title-form"><span class="mdi blue mdi-book-open-page-variant icon-medium"> </span>Pages</p>
            <div class="list-article">
                {% for page in pages %}
                    {% if page.status == 'PUBLIC' %}
                        <div class="li-page"> 
                            <div class="li-title-page font-medium">{{ page.title | raw }}</div>
                            <div class="li-date-page"> {{ page.date |date("m/d/Y") }} </div>
                            <div>
                
                                <a href="{{ path('edit', {'id': page.id }) }}">
                                    <button class="btn-list"><span class="mdi orange mdi-file-document-edit icon-medium"> </span>EDIT</button>
                                </a>
                                    <a href="{{ path('remove', {'id': page.id }) }}">
                                        <button class="btn-list"><span class="mdi red mdi-delete icon-medium"></span>DELETE</button>
                                </a>
                                
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        
    
    </section>
    
{% endblock %}
